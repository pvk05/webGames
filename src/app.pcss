/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  h1 {
	@apply text-3xl;
  }
  h2 {
	@apply text-2xl;
  }
  h3 {
	@apply text-xl;
  }
  h4 {
	@apply text-lg;
  }
  h5 {
	@apply text-base;
  }
  h6 {
	@apply text-sm;
  }
}

@layer components {
  .path {
    background-color: white;
    border: 1px solid black;
    height: 100%;
    display: inline-flex;
    align-items: center;
  }
}